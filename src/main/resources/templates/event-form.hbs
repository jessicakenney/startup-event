{{#partial "content"}}

    {{#if addAttendee}}
        <h3>Add Attendee</h3>
        <form action="/events/{{addAttendee.id}}/addAttendee" method="post">
            <label for="attendee">Name</label>
            <input id="attendee" name="attendee" type="text" value="{{editEvent.attendees}}">

    {{else}}

        {{#if editEvent}}
            <h3>Update the Event</h3>
            <form action="/events/{{editEvent.id}}/update" method="post">
                <label for="name">Event Name</label>
                <input id="name" name="name" type="text" value="{{editEvent.name}}">
                <label for="description">Event Description</label>
                <input id="description" name="description" type="text" value="{{editEvent.description}}">

        {{else}}

        <h3>Add a New Event</h3>
        <form action="/events/new" method="post">
            <label for="name">Enter Name</label>
            <input id="name" name="name" type="text">
            <label for="description">Enter Description</label>
            <input id="description" name="description" type="text">
        {{/if}}
    {{/if}}

    <button type="submit" class="btn btn-default">Add</button>
    </form>

{{/partial}}

{{> layout.hbs}}