{{#partial "content"}}

    {{#if editEvent}}
        <h1>Edit Name</h1>
        <form action="/events/{{editEvent.id}}/update" method="post">
            <label for="name">Edit this Event's name</label>
            <input id="name" name="name" type="text" value="{{editEvent.name}}">
            <label for="name">Edit this Event's description</label>
            <input id="name" name="name" type="text" value="{{editEvent.description}}">
    {{else}}

    <h3>Add a New Event</h3>

    <form action="/events/new" method="post">
        <label for="name">Enter Name</label>
        <input id="name" name="name" type="text">
        <label for="description">Enter Description</label>
        <input id="description" name="description" type="text">
    {{/if}}
    <button type="submit" class="btn btn-default">Add</button>
    </form>

{{/partial}}

{{> layout.hbs}}