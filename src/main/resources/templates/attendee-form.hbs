{{#partial "content"}}

    {{#if editAttendee}}
            <h3>Update the Attendee</h3>
        <form action="/attendees/{{editAttendee.id}}/update" method="post">
            <label for="name">Attendee's Name</label>
            <input id="name" name="name" type="text" value="{{editAttendee.name}}">
            <br>

    {{/if}}

    <button type="submit" class="btn btn-default">Update</button>
    </form>

{{/partial}}

{{> layout.hbs}}